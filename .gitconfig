[user]
  name = Ken Lee
  email = ken.lee.dev@gmail.com

[core]
  autocrlf = input
  safecrlf = true
  editor = "NVIM_TUI_ENABLE_TRUE_COLOR=1 nvim"
  excludesfile = ~/.gitignore_global

[init]
  defaultBranch = main

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h | %ad %an | %s%d' --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[color]
  ui = auto

[commit]
  verbose = true

[merge]
  tool = vimdiff

[push]
  default = simple
